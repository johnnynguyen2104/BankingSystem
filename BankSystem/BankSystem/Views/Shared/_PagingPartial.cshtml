@model BankSystem.Helpers.Pager
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="margin-left-10">
    @if (Model.EndPage > 1)
    {
        <ul class="pagination">
            @if (Model.CurrentPage > 1)
            {
                <li>
                    <a href="@Url.Action("Index","Home")">First</a>
                </li>
                                <li>
                                    <a href="@Url.Action("Index","Home", new { page = (Model.CurrentPage - 1) })">Previous</a>
                                </li>
            }

            @for (var page = Model.StartPage; page <= Model.EndPage; page++)
            {
                <li class="@(page == Model.CurrentPage ? "active" : "")">
                    <a href="@Url.Action("Index","Home", new { page = page })">@page</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li>
                    <a href="@Url.Action("Index","Home", new { page = (Model.CurrentPage + 1) })">Next</a>
                </li>
                                <li>
                                    <a href="@Url.Action("Index","Home", new { page = (Model.TotalPages) })">Last</a>
                                </li>
            }
        </ul>
    }
</div>