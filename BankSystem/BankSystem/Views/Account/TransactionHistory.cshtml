@model BankSystem.Models.PagingVM<BankSystem.Service.Dtos.TransactionHistoryDto>
@{
        ViewData["Title"] = "AccountDetails";
        Layout = "~/Views/Shared/_Layout.cshtml";
        var sidebar = new BankSystem.Models.AccountViewModels.SideBarVM() { IsTransactionHistory = true };
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card card-mini">
            <div class="card-header">
                <div class="card-title">Transaction Histories</div>
            </div>
            <div class="card-body no-padding table-responsive">
                <table class="table card-table">
                    <thead>
                        <tr>
                            <th>Transaction Date</th>
                            <th>Transaction Type</th>
                            <th>Interaction Account</th>
                            <th class="right">Value</th>
                            <th class="right">#</th>
                            <th>Note</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.CreatedDate</td>
                                <td>@item.Type.ToString()</td>
                                <td>@item.InteractionAccountNumber</td>
                                <td>@item.Money</td>
                                <td>@item.BalanceAtTime</td>
                                <td>@item.Note</td>
                            </tr>
                        }
                        @if (Model == null || Model.Items.Count == 0)
	                    {
		                     <tr>
                                 <td colspan="6"><span>No activities was found.</span></td>
                             </tr>
	                    }

                    </tbody>
                </table>

               @Html.Partial("_PagingPartial", Model.Pager)
            </div>
        </div>
    </div>
</div>



@section SideBar{
    @Html.Partial("_SideBarPartial", sidebar)
}